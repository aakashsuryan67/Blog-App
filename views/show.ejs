<% include partials/header %>
<div class="ui container main text segment">
    <div class="item">
        <h1 class="ui huge header"><%= blog.title %></h1>
        <img src="<%= blog.image %>" class="ui centered rounded image" >
        <div class="content">
            <span><%= blog.date.toDateString() %></span>
        </div>
        <div class="description">
            <p><%- blog.body %></p>
        </div>
        <a href="/blogs/<%= blog._id %>/edit" class="ui yellow basic button">Edit</a>
        <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete</button>
        </form>
        
    </div>
</div>
<% include partials/footer %>
